{
  "name": "scribe-audio",
  "displayName": "scribe-audio",
  "description": "",
  "version": "0.0.1",
  "publisher": "scribe",
  "engines": {
    "node": ">=18.17.0",
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "scribe.scribeAudioEditor",
        "displayName": "Scribe Audio Editor",
        "selector": [
          {
            "filenamePattern": "*.swav"
          }
        ],
        "priority": "default"
      }
    ],
    "viewsWelcome": [
      {
        "view": "audio-explorer-sidebar",
        "contents": "Welcome to the Scribe Audio Recorder! Please setup a new Audio project by clicking the button below.\n\n[Create or Open Audio Project](command:scribe-audio.createNewProjectBtnClick)"
      }
    ],
    "views": {
      "audio-explorer-sidebar-view": [
        {
          "id": "audio-explorer-sidebar",
          "type": "webview",
          "name": "Audio Explorer",
          "visibility": "visible",
          "icon": "$(mic)",
          "contextualTitle": "Audio Explorer"
        },
        {
          "id": "audio-explorer-sidebar-options",
          "name": "Audio Utils",
          "visibility": "visible",
          "icon": "$(mic)",
          "contextualTitle": "Audio Utils"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "audio-explorer-sidebar-view",
          "title": "Audio Recorder",
          "icon": "$(mic)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "audio-explorer-sidebar-view.refreshEntry",
          "when": "view == audio-explorer-sidebar-view",
          "group": "navigation"
        }
      ],
      "commandPalette": []
    },
    "commands": [
      {
        "command": "scribe-audio.scribeaudio",
        "title": "Scribe Audio",
        "category": "ScribeAudio"
      },
      {
        "title": "Start a new Audio Project",
        "shortTitle": "Start a new Audio Project",
        "command": "scribe-audio.initNewAudioProject",
        "category": "ScribeAudio"
      },
      {
        "command": "audio-explorer-sidebar-view.refreshEntry",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "ScribeAudio"
      },
      {
        "command": "scribe-audio.createNewProjectBtnClick",
        "title": "Init Audio Project Btn Invoke",
        "category": "ScribeAudio"
      },
      {
        "command": "scribe-audio.openAudioEditor",
        "title": "Open Scribe Audio Editor",
        "category": "ScribeAudio"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/uuid": "^9.0.8",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "moment": "^2.30.1",
    "usfm-grammar": "^2.3.1",
    "uuid": "^9.0.1"
  }
}
